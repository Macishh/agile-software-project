<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/damage_report_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report damage"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#1E88E5"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints"/>

    <LinearLayout
        android:id="@+id/report_choice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/damage_report_header">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <EditText
        android:id="@+id/input_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/report_choice"
        android:layout_marginTop="35dp"
        android:background="@drawable/report_edittext_background"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Subject" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input_subject"
        android:layout_marginTop="35dp"
        android:background="@drawable/report_edittext_background"
        android:padding="10dp"
        android:layout_marginHorizontal="10dp"
        android:hint="Stand name" />


    <EditText
        style="@android:style/Widget.DeviceDefault.EditText"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:hint="Describe the issue..."
        android:gravity="top|left"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginVertical="100dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/report_edittext_background" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:background="@drawable/shape_login_btn"
        android:textColor="#FFF"/>


</RelativeLayout>