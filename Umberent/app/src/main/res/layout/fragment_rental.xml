<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center">

    <Chronometer
        android:id="@+id/rentalTimeElapsedChronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/umbrella_imageView"
        android:layout_width="175dp"
        android:layout_height="150dp"
        android:rotation="10"
        android:src="@drawable/umbrella_real" />

    <Button
        android:id="@+id/end_rent_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="100dp"
        android:background="#EFEDED"
        android:radius="20dp"
        android:text="Avsluta hyrning"
        android:textColor="#F44336" />

    <Button
        android:id="@+id/confirm_rent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="Starta hyrning" />
</RelativeLayout>