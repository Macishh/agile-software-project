<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp">

        <Chronometer
            android:id="@+id/rentalTimeElapsedChronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:textColor="#000000"
            android:textSize="18dp" />

        <Button
            android:id="@+id/end_rent_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="56dp"
            android:background="@drawable/shape_pcbutton_red"
            android:outlineAmbientShadowColor="#BC1A1A"
            android:radius="20dp"
            android:text="Avsluta hyrning"
            android:textColor="#CC2828" />


        <Button
            android:id="@+id/start_rent_button"
            android:layout_width="240dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="-4dp"
            android:background="@drawable/shape_pcbutton"
            android:outlineAmbientShadowColor="#BC1A1A"
            android:radius="20dp"
            android:text="Bekräfta"
            android:textColor="@color/standText"
            android:visibility="visible" />

        <TextView
            android:id="@+id/currentPriceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="62dp"
            android:text="Aktuellt pris: 0kr"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/confirmRental"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-55dp"
            android:text="Vill du påbörja denna hyrning?"
            android:textColor="#000000"
            android:textSize="18dp" />

    </androidx.cardview.widget.CardView>
</LinearLayout>