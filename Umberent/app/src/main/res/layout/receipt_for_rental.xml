<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="498dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="4dp"
            android:text="Tack för att du använder Umberent!"
            android:textColor="@color/standText"
            android:textSize="24dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/umbrella_imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="-34dp"
            android:rotation="10"
            android:src="@drawable/umbrella_realshadow" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:visibility="visible"
            app:srcCompat="@drawable/receipt" />

        <TextView
            android:id="@+id/finishedCostTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="180dp"
            android:text="Totalt pris:"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/finishedtTimeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="210dp"
            android:text="Total tid:"
            android:textColor="#000000"

            android:textSize="20dp" />

    </androidx.cardview.widget.CardView>
</RelativeLayout>