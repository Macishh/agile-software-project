<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:visibility="visible">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="56dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/aboutUsTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:text="Om Umberent"
                    android:textColor="#0077C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/aboutUsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:paddingVertical="5dp">

                    <Button
                        android:id="@+id/aboutUsButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/button_selector"
                        android:gravity="center|left"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="5dp"
                        android:text="Om oss" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/generalTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:text="Allmänt"
                    android:textColor="#0077C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/generalDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/instructionsTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:text="Intsruktioner"
                    android:textColor="#0077C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/instructionsDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/paymentTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:text="Betalning"
                    android:textColor="#0077C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/paymentDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/appBugReportTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:text="Rapportera buggar i appen"
                    android:textColor="#0077C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/appBugDivider"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/generalTitleTextView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:layout_marginVertical="5dp"
                    android:text="Rapportera buggar i paraplyerna"
                    android:textColor="#0077C2"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/generalDivider5"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="#000000" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#0077C2">

        <TextView
            android:id="@+id/helpTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Hjälp"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>