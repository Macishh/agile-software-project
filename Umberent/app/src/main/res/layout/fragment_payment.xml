<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/payment_cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cardNumber"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="130dp"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expirationDate"
        android:layout_marginTop="190dp"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_cvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cvc"
        android:layout_marginTop="250dp"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kortnummer"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="40dp"
        android:textColor="#2196F3"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utgångsdatum"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="40dp"
        android:textColor="#2196F3"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVC"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="40dp"
        android:textColor="#2196F3"/>

    <Button
        android:id="@+id/payment_pcButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Lägg till kampanjkod"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="400dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:background="#FFFFFF"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/edit_text"
        android:layout_marginLeft="350dp"/>


</RelativeLayout>