<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0077C2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Betalning"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/payment_cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cardNumber"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="130dp"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_cardNumber_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kortnummer"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="40dp"
        android:textColor="#2196F3"/>

    <EditText
        android:id="@+id/payment_edit_cardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:text="cardNumber"
        android:layout_marginTop="120dp"
        android:textSize="24sp"
        android:layout_marginLeft="38dp"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/payment_expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expirationDate"
        android:layout_marginTop="190dp"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_expirationDate_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Utgångsdatum"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="175dp"
        android:layout_marginLeft="40dp"
        android:textColor="#2196F3"/>

    <EditText
        android:id="@+id/payment_edit_expirationDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="expirationDate"
        android:layout_marginTop="180dp"
        android:textSize="24sp"
        android:layout_marginLeft="38dp"
        android:textColor="#000000"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/payment_cvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cvc"
        android:layout_marginTop="250dp"
        android:textSize="24sp"
        android:layout_marginLeft="40dp"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/payment_cvc_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVC"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="235dp"
        android:layout_marginLeft="40dp"
        android:textColor="#2196F3"/>

    <EditText
        android:id="@+id/payment_edit_cvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:text="cvc"
        android:textSize="24sp"
        android:layout_marginLeft="38dp"
        android:textColor="#000000"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/payment_pcButton"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:text="Lägg till kampanjkod"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="400dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:textColor="#2196F3"
        android:background="@drawable/shape_pcbutton"/>

    <ImageButton
        android:id="@+id/payment_edit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/edit_button"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="90dp"
        android:background="#FFFFFF"/>

    <ImageButton
        android:id="@+id/payment_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/confirm_button"
        android:layout_marginLeft="370dp"
        android:layout_marginTop="90dp"
        android:background="#FFFFFF"
        android:visibility="invisible"/>


</RelativeLayout>