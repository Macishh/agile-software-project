<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/rent_button"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="180dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/shape_pcbutton"
                android:outlineAmbientShadowColor="#BC1A1A"
                android:radius="20dp"
                android:text="Gå vidare för att hyra"
                android:textColor="#1233D1"
                android:visibility="visible" />


        </LinearLayout>

        <TextView
            android:id="@+id/amount_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="90dp"
            android:layout_marginEnd="30dp"
            android:text="Amount"
            android:textColor="@color/standText"
            android:textSize="16dp"/>

        <ImageView
            android:id="@+id/umbrella_imageView"
            android:layout_width="190dp"
            android:layout_height="165dp"
            android:rotation="10"
            android:src="@drawable/umbrella_realshadow" />

        <TextView
            android:id="@+id/price_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="240dp"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="30dp"
            android:text="Price"
            android:textColor="@color/standText"
            android:textSize="16dp"/>

        <TextView
            android:id="@+id/location_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="210dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:text="Location"
            android:textColor="@color/standText"
            android:textSize="18dp"
            android:textStyle="bold"/>


        <ImageView
            android:id="@+id/money_imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="120dp"
            app:srcCompat="@drawable/payment_icon" />

        <ImageView
            android:id="@+id/umbrella_icon_imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="210dp"
            android:layout_marginTop="90dp"
            app:srcCompat="@drawable/umbrella_icon" />

    </androidx.cardview.widget.CardView>

</LinearLayout>

